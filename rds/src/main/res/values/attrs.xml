<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="mainColorType" format="enum">
        <enum name="red" value="0" />
        <enum name="pink" value="1" />
        <enum name="purple" value="2" />
        <enum name="deep_purple" value="3" />
        <enum name="indigo" value="4" />
        <enum name="blue" value="5" />
        <enum name="light_blue" value="6" />
        <enum name="cyan" value="7" />
        <enum name="teal" value="8" />
        <enum name="green" value="9" />
        <enum name="light_green" value="10" />
        <enum name="lime" value="11" />
        <enum name="yellow" value="12" />
        <enum name="amber" value="13" />
        <enum name="orange" value="14" />
        <enum name="deep_orange" value="15" />
        <enum name="brown" value="16" />
        <enum name="gray" value="17" />
        <enum name="blue_gray" value="18" />
    </attr>

    <attr name="confirmButtonStyle" format="reference" />
    <declare-styleable name="ConfirmButton">
        <attr name="android:text" />
        <attr name="mainColorType" />
        <attr name="priority" format="enum">
            <enum name="main" value="0" />
            <enum name="sub" value="1" />
        </attr>
        <attr name="loading" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SegmentControl">
        <attr name="position" format="integer" />
        <attr name="segments" format="reference" />
    </declare-styleable>
</resources>