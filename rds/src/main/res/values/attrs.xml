<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="mainColorType" format="enum">
        <enum name="red" value="0" />
        <enum name="pink" value="1" />
        <enum name="purple" value="2" />
        <enum name="blue" value="3" />
        <enum name="cyan" value="4" />
        <enum name="green" value="5" />
        <enum name="yellow" value="6" />
        <enum name="orange" value="7" />
        <enum name="brown" value="8" />
        <enum name="blue_gray" value="9" />
        <enum name="gray" value="10" />
    </attr>

    <attr name="confirmButtonStyle" format="reference" />
    <declare-styleable name="ConfirmButton">
        <attr name="android:text" />
        <attr name="mainColorType" />
        <attr name="priority" format="enum">
            <enum name="main" value="0" />
            <enum name="sub" value="1" />
        </attr>
        <attr name="loading" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SegmentControl">
        <attr name="position" format="integer" />
        <attr name="segments" format="reference" />
    </declare-styleable>
</resources>
