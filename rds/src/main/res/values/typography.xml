<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="typographyHeadline1" format="reference" />
    <attr name="typographyHeadline2" format="reference" />
    <attr name="typographyHeadline3" format="reference" />
    <attr name="typographyHeadline4" format="reference" />
    <attr name="typographyHeadline5" format="reference" />
    <attr name="typographyHeadline6" format="reference" />
    <attr name="typographySubtitle1" format="reference" />
    <attr name="typographySubtitle2" format="reference" />
    <attr name="typographyBody1" format="reference" />
    <attr name="typographyBody2" format="reference" />

    <!-- TODO : Transparent Status Bar Color -->
    <style name="Typography" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="typographyHeadline1">@style/Typography.TextAppearance.Headline1</item>
        <item name="typographyHeadline2">@style/Typography.TextAppearance.Headline2</item>
        <item name="typographyHeadline3">@style/Typography.TextAppearance.Headline3</item>
        <item name="typographyHeadline4">@style/Typography.TextAppearance.Headline4</item>
        <item name="typographyHeadline5">@style/Typography.TextAppearance.Headline5</item>
        <item name="typographyHeadline6">@style/Typography.TextAppearance.Headline6</item>
        <item name="typographySubtitle1">@style/Typography.TextAppearance.Subtitle1</item>
        <item name="typographySubtitle2">@style/Typography.TextAppearance.Subtitle2</item>
        <item name="typographyBody1">@style/Typography.TextAppearance.Body1</item>
        <item name="typographyBody2">@style/Typography.TextAppearance.Body2</item>

        <item name="android:includeFontPadding">false</item>
        <item name="confirmButtonStyle">@style/Typography.ConfirmButton</item>
    </style>

    <!-- TextAppearance -->
    <style name="Typography.TextAppearance">
        <item name="android:textColor">@color/blue_gray_900</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Typography.TextAppearance.Light">
        <item name="android:fontFamily">@font/notosans_light</item>
    </style>

    <style name="Typography.TextAppearance.Regular">
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="Typography.TextAppearance.Medium">
        <item name="android:fontFamily">@font/notosans_medium</item>
    </style>

    <style name="Typography.TextAppearance.Headline1" parent="Typography.TextAppearance.Light">
        <item name="android:textSize">@dimen/typography_headline1</item>
        <item name="android:lineSpacingExtra">-1.5dp</item>
    </style>

    <style name="Typography.TextAppearance.Headline2" parent="Typography.TextAppearance.Light">
        <item name="android:textSize">@dimen/typography_headline2</item>
        <item name="android:lineSpacingExtra">-0.5dp</item>
    </style>

    <style name="Typography.TextAppearance.Headline3" parent="Typography.TextAppearance.Regular">
        <item name="android:textSize">@dimen/typography_headline3</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="Typography.TextAppearance.Headline4" parent="Typography.TextAppearance.Regular">
        <item name="android:textSize">@dimen/typography_headline4</item>
        <item name="android:lineSpacingExtra">0.25dp</item>
    </style>

    <style name="Typography.TextAppearance.Headline5" parent="Typography.TextAppearance.Regular">
        <item name="android:textSize">@dimen/typography_headline5</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="Typography.TextAppearance.Headline6" parent="Typography.TextAppearance.Medium">
        <item name="android:textSize">@dimen/typography_headline6</item>
        <item name="android:lineSpacingExtra">0.15dp</item>
    </style>

    <style name="Typography.TextAppearance.Subtitle1" parent="Typography.TextAppearance.Regular">
        <item name="android:textSize">@dimen/typography_subtitle1</item>
        <item name="android:lineSpacingExtra">0.15dp</item>
    </style>

    <style name="Typography.TextAppearance.Subtitle2" parent="Typography.TextAppearance.Medium">
        <item name="android:textSize">@dimen/typography_subtitle2</item>
        <item name="android:lineSpacingExtra">0.1dp</item>
    </style>

    <style name="Typography.TextAppearance.Body1" parent="Typography.TextAppearance.Regular">
        <item name="android:textSize">@dimen/typography_body1</item>
        <item name="android:lineSpacingExtra">0.5dp</item>
    </style>

    <style name="Typography.TextAppearance.Body2" parent="Typography.TextAppearance.Regular">
        <item name="android:textSize">@dimen/typography_body2</item>
        <item name="android:lineSpacingExtra">0.25dp</item>
    </style>
</resources>