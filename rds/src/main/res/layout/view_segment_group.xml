<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        tools:layout_height="50dp"
        tools:layout_width="match_parent"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        tools:theme="@style/Typography">

        <com.ray.rds.view.group.segment.SegmentItem
            android:id="@+id/segment_item"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/container_segment_children"
            app:layout_constraintStart_toStartOf="@id/container_segment_children"
            app:layout_constraintTop_toTopOf="@id/container_segment_children" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/container_segment_children"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_xxs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </merge>
</layout>